@{
    ViewData["Title"] = "Reset password confirmation | Amatis Training";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@section title
{
    <title>@ViewData["Title"]</title>
}

<div class="login-cover">
    <div class="login-cover-image"
         style="background-image: url(../../images/bg/login-bg-4.jpg)" data-id="login-cover-image"></div>
    <div class="login-cover-bg"></div>
</div>
<!-- begin #page-container -->
<div id="page-container" class="fade">
    <!-- begin login -->
    <div class="login login-v2" data-pageload-addclass="animated fadeIn">
        <!-- begin brand -->
        <div class="login-header">
            <div class="brand">
                <img class="img-fluid" src="~/images/logo/Amatis_Logo_Primary_White_RGB.png" />
            </div>
            <div class="icon">
                <i class="fa fa-lock"></i>
            </div>
        </div>
        <!-- end brand -->
        <!-- begin login-content -->
        <h1>Reset password confirmation</h1>
        <p>Your password has been reset. Please <a asp-controller="Account" asp-action="Login">Click here to log in</a>. </p>
        <!-- end login-content -->
    </div>
    <!-- end login -->




</div>
<!-- end page container -->
