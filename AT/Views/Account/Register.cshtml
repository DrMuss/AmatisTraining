@model RegisterViewModel
@{
    ViewData["Title"] = "Register | Amatis Training";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@section title
{
    <title>@ViewData["Title"]</title>
}

	<!-- begin #page-container -->
<div id="page-container" class="fade">
    <div class="register register-with-news-feed">
        <!-- begin news-feed -->
        <div class="news-feed">
           
            <div class="news-image" 
                 style="background-image: url(../../images/bg/login-bg-9.jpg)"></div>
            <div class="news-caption">
                
                <h4 class="caption-title">
                    
                <b>Amatis</b> Training</h4>
                <p>
                    Once you have signed up for an account you can access our training courses.
                </p>
            </div>
        </div>
        <!-- end news-feed -->
        <!-- begin right-content -->
        <div class="right-content">
            
            <!-- begin register-header -->
            <h1 class="register-header">
                Sign Up
                <small>Create your Amatis Training Account.</small>
            </h1>
            <!-- end register-header -->
            <!-- begin register-content -->
            <div class="register-content">
                <form asp-action="Register"
                      asp-controller="Account"
                      method="post" class="margin-bottom-0">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <label class="control-label">Name <span class="text-danger">*</span></label>
                    <div class="row row-space-10">
                        <div class="col-md-6 m-b-15">
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="First name" required />
                        </div>
                        <div class="col-md-6 m-b-15">
                            <input asp-for="LastName" type="text" class="form-control" placeholder="Last name" required />
                        </div>
                    </div>
                    <label class="control-label">Company Details <span class="text-danger">*</span></label>
                    <div class="row row-space-10">
                        <div class="col-md-6 m-b-15">
                            <input asp-for="Company" type="text" class="form-control" placeholder="Company Name" required />
                        </div>
                        <div class="col-md-6 m-b-15">
                            <input asp-for="Division" type="text" class="form-control" placeholder="Department" required />
                        </div>
                        <div class="col-md-6 m-b-15">
                            <input asp-for="JobTitle" type="text" class="form-control" placeholder="Job Title" required />
                        </div>
                        <div class="col-md-6 m-b-15">
                            <input asp-for="Mobile" type="text" class="form-control" placeholder="Mobile" required />
                        </div>
                    </div>
                    <label class="control-label">Email <span class="text-danger">*</span></label>
                    <div class="row m-b-15">
                        <div class="col-md-12">
                            <input asp-for="Email"
                                   type="text" class="form-control" placeholder="Email address" required />
                        </div>
                    </div>
                    
                    <label class="control-label">Password <span class="text-danger">*</span></label>
                    <div class="row m-b-15">
                        <div class="col-md-6">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" required />
                        </div>
                        <div class="col-md-6">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" required />
                        </div>
                    </div>
                    <div class="checkbox checkbox-css m-b-30">
                        <div class="checkbox checkbox-css m-b-30">
                            <input type="checkbox" id="agreement_checkbox" value="">
                            <label for="agreement_checkbox">
                                By clicking Sign Up, you agree to our 
                                <a asp-controller="Home" asp-action="Terms">Terms</a> 
                                and that you have read our 
                                <a asp-controller="Home" asp-action="Privacy">Data Policy</a>, 
                                including our <a asp-controller="Home" asp-action="Cookies">Cookie Use</a>.
                            </label>
                        </div>
                    </div>
                    <div class="form-group row m-b-15">
                     
                        <div class="col-md-12">
                            <div class="g-recaptcha pull-left" data-sitekey="@Model.Recaptcha"></div>
                        </div>
                    </div>
                    <div class="register-buttons">
                        <button id="registerPost"
                                type="submit"
                                class="btn btn-success btn-block btn-lg" 
                                disabled>Sign Up</button>
                    </div>
                    <div class="m-t-20 m-b-40 p-b-40 text-inverse">
                        Already a member? Click <a asp-controller="Account" asp-action="Login">here</a> to login.
                    </div>
                    <hr />
                    <p class="text-center">
                        &copy; Amatis Training All Right Reserved 2019
                    </p>
                </form>
            </div>
            <!-- end register-content -->
        </div>
        <!-- end right-content -->
    </div>
    <!-- end register -->
</div>



    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

<script src='https://www.google.com/recaptcha/api.js'></script>

<script>
        grecaptcha.ready(function () {
            grecaptcha.execute('6LdObqQUAAAAAGgR1rdRlYYTsaMECXXPsTeMKbgB', { action: 'validate_callback' }).then(function (token) {
                // add token value to form
                document.getElementById('g-recaptcha-response').value = token;
            });
        });
</script>

<script type='text/javascript'>

    var checker = document.getElementById('agreement_checkbox');
            var sendbtn = document.getElementById('registerPost');
            checker.onchange = function () {

                sendbtn.disabled = !this.checked;
            };

</script>

    }




