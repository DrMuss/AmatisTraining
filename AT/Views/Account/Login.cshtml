@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in | Amatis Training";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@section title
{
    <title>@ViewData["Title"]</title>
}
<div class="login-cover">
    <div class="login-cover-image" 
         style="background-image: url(../../images/bg/login-bg-7.jpg)" data-id="login-cover-image"></div>
    <div class="login-cover-bg"></div>
</div>
	<!-- begin #page-container -->
<div id="page-container" class="fade">
    <!-- begin login -->
    <div class="login login-v2" data-pageload-addclass="animated fadeIn">
        <!-- begin brand -->
        <div class="login-header">
            <div class="brand">
                <img class="img-fluid" src="~/images/logo/Amatis_Logo_Primary_White_RGB.png" />
            </div>
            <div class="icon">
                <i class="fa fa-lock"></i>
            </div>
        </div>
        <!-- end brand -->
        <!-- begin login-content -->
        <div class="login-content">
            <form asp-controller="Account" 
                  asp-action="Login" 
                  asp-route-returnurl="@ViewData["ReturnUrl"]" 
                  method="post" class="margin-bottom-0">
               
                    <div class="form-group m-b-20">
                        <input asp-for="Email" type="text" 
                               class="form-control form-control-lg" 
                               placeholder="Email Address" required/>
                        <span asp-validation-for="Email" class="text-danger"></span>
               
                    </div>
                    <div class="form-group m-b-20">
                        <input asp-for="Password" type="password" class="form-control  form-control-lg" placeholder="Password" required />
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="checkbox checkbox-css m-b-20">
                        <input type="checkbox" asp-for="RememberMe" id="remember_checkbox" />
                        <label asp-for="RememberMe">
                           @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>

                
                    <div class="login-buttons">
                        <button type="submit" 
                                class="btn btn-success btn-block btn-lg">Sign me in</button>
                    </div>
                    <div class="m-t-20">
                        Not a member yet? Click <a asp-action="Register" asp-controller="Account">here</a> to register.
                    </div>
                <div class="m-t-20">
                    <a asp-action="ForgotPassword">Forgot your password?</a>
                </div>
                </form>
</div>
        <!-- end login-content -->
    </div>
    <!-- end login -->

   

 
</div>
<!-- end page container -->


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
